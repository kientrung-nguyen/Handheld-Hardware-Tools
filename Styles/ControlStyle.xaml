<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:primitives="clr-namespace:ModernWpf.Controls.Primitives;assembly=ModernWpf"
    xmlns:local="clr-namespace:ModernWpf.Controls;assembly=ModernWpf.Controls">

    <Style TargetType="ui:FontIcon" x:Key="statusBarIcons">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="Margin" Value="6,0,0,0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>
    
</ResourceDictionary>