<Window x:Class="Everything_Handhelds_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Everything_Handhelds_Tool"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="Everything Handhelds Tool" Height="700" Width="500"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.ExtendViewIntoTitleBar="False"
        ui:TitleBar.IsBackButtonVisible="False"
        ui:ThemeManager.IsThemeAware="True"
        
        >
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"  />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ui:NavigationView   Name="navigationView" PaneDisplayMode="LeftCompact"    IsSettingsVisible="False" IsBackButtonVisible="Collapsed" SelectionChanged="navigationView_SelectionChanged" />
        <Frame x:Name="frame" Grid.Column="1" Source="Pages/HomePage.xaml"  />

    </Grid>



</Window>
