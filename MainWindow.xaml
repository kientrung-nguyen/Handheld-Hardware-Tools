<Window x:Class="Everything_Handhelds_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Everything_Handhelds_Tool"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="Everything Handhelds Tool" Height="700" Width="500"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:TitleBar.ExtendViewIntoTitleBar="False"
        ui:TitleBar.IsBackButtonVisible="False"
        ui:ThemeManager.IsThemeAware="True"
        
        >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"  />
            <RowDefinition Height="50"  />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        
        
        <Grid Grid.Row="1">
            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF10A;" HorizontalAlignment="Left"/>
            <ListBox x:Name="navigationViewListBox" HorizontalAlignment="Center">
                <ListBox.Resources>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="0"/>

                            </Style>
                        </Style.Resources>
                    </Style>
                </ListBox.Resources>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid  Height="25">
                            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="{Binding}"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF10B;" HorizontalAlignment="Right"/>
        </Grid>

         
       
        <Frame x:Name="frame" Grid.Row="2" Source="Pages/HomePage.xaml"  />

    </Grid>



</Window>
