<classes:ControllerPage x:Class="Everything_Handhelds_Tool.AppWindows.WindowManager.WindowManagerPage"
               xmlns:classes="clr-namespace:Everything_Handhelds_Tool.Classes.Controller_Object_Classes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Everything_Handhelds_Tool.AppWindows.WindowManager"
      mc:Ignorable="d" 
   xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="WindowManagerPage">

    <Grid   >
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition  />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1">
            <Image Name="largeImage" Height="225" VerticalAlignment="Top"  />
            <Viewbox Height="40"  VerticalAlignment="Bottom" HorizontalAlignment="Center"   >

                <TextBlock Name="textProcessTitle" />

            </Viewbox>
            
            <Viewbox Height="30"   VerticalAlignment="Bottom" HorizontalAlignment="Center"   >

                <TextBlock Name="textProcessName"  />

            </Viewbox>

            <StackPanel Orientation="Horizontal">
                <Button Height="60" Name="maximizeButton" Click="maximizeButton_Click">
                    <ui:SymbolIcon Symbol="FullScreenMaximize20" FontSize="40" />
                </Button>

                <Button Height="60" Name="closeButton">
                    <ui:SymbolIcon Symbol="CalendarCancel20" FontSize="40"/>
                </Button>

                <Button Height="60" Name="monitorMoveRight">
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <TextBlock Text="1"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ui:SymbolIcon Symbol="Tv20" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        
                        </Grid>
                        <ui:SymbolIcon Symbol="ArrowRight20" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <Grid>
                            <TextBlock Text="2"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ui:SymbolIcon Symbol="Tv20" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" />

                        </Grid>
                        
                    </StackPanel>
                </Button>
                <Button Height="60" Name="monitorMoveLeft">
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <TextBlock Text="1"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ui:SymbolIcon Symbol="Tv20" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" />

                        </Grid>
                        <ui:SymbolIcon Symbol="ArrowLeft20" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <Grid>
                            <TextBlock Text="2"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ui:SymbolIcon Symbol="Tv20" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" />

                        </Grid>

                    </StackPanel>
                </Button>

                <Button Height="60" Name="endATaskButton">
                    <ui:SymbolIcon Symbol="ShareScreenStop24" FontSize="40"/>
                </Button>
            </StackPanel>
            
        </StackPanel>
        

        <ScrollViewer Grid.Row="1" Grid.Column="1" x:Name="scrollViewer"  VerticalScrollBarVisibility="Visible" >
            <StackPanel Name="stackPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >


            </StackPanel>
        </ScrollViewer>


    </Grid>
</classes:ControllerPage>
