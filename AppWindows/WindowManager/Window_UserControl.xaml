<classes:ControllerUserControl x:Class="Everything_Handhelds_Tool.AppWindows.WindowManager.Window_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             MouseUp="ControllerUserControl_MouseUp"
             xmlns:classes="clr-namespace:Everything_Handhelds_Tool.Classes.Controller_Object_Classes"  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                               mc:Ignorable="d" Focusable="False"
            Height="170" Width="200" Margin="0,0,0,3">
    <Border x:Name="border" Style="{StaticResource userControlBorder}" Opacity="1" >
        <ui:Card   x:Name="card" >
            <DockPanel   >
                <Image x:Name="image" Height="100"  MaxHeight="100"   Margin="0,0,8,0"  VerticalAlignment="Top" DockPanel.Dock="Top"   />
                <Viewbox Height="22" VerticalAlignment="Center"  HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                    <TextBlock Name="ProcessName" Text="" TextWrapping="Wrap" />
                </Viewbox>


         
            </DockPanel>

        
           

        </ui:Card>
    </Border>
   

</classes:ControllerUserControl>
