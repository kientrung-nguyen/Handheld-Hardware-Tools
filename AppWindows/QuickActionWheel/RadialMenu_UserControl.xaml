<UserControl x:Class="Handheld_Hardware_Tools.AppWindows.QuickActionWheel.RadialMenu_UserControl"
   
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Handheld_Hardware_Tools.AppWindows.QuickActionWheel"
             mc:Ignorable="d" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Background="Transparent"
             Loaded="UserControl_Loaded"
             Height="70" Width="80"
            >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:SymbolIcon Name="icon" Symbol="DeveloperBoardLightning20" FontSize="40"  />
        <fa:FontAwesome Name="fontIcon" Visibility="Collapsed" Icon="Steam" Foreground="White" FontSize="40" />




        <Viewbox Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Name="textblock"  HorizontalAlignment="Stretch"  TextWrapping="Wrap" />

        </Viewbox>
    </Grid>
</UserControl>
