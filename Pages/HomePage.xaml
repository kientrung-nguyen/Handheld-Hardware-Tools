<classes:ControllerPage x:Class="Everything_Handhelds_Tool.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Everything_Handhelds_Tool"
         xmlns:classes="clr-namespace:Everything_Handhelds_Tool.Classes.Controller_Object_Classes"
       xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
        xmlns:uc="clr-namespace:Everything_Handhelds_Tool.UserControls.HomePageUserControls"
      Title="HomePage" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
           
       
        </Grid.RowDefinitions>
        <Viewbox Height="30" VerticalAlignment="Center" DockPanel.Dock="Top" HorizontalAlignment="Left" >
            <TextBlock Text="TDP"  />
        </Viewbox>
        <StackPanel  x:Name="stackPanel" Grid.Row="1" HorizontalAlignment="Stretch" >

            <uc:TDP_Slider/>
            <uc:TDP_Slider_Copy/>
        </StackPanel>

    </Grid>
</classes:ControllerPage>
