<classes:ControllerUserControl x:Class="Everything_Handhelds_Tool.UserControls.HomePageUserControls.TDP_Slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Everything_Handhelds_Tool.UserControls.HomePageUserControls"
             xmlns:classes="clr-namespace:Everything_Handhelds_Tool.Classes.Controller_Object_Classes"  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                               mc:Ignorable="d" 
            Height="70"  >
    <Grid>
        <Border Name="border" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Stretch">
            <DockPanel>
                <ui:SymbolIcon x:Name="controllerStatusBarIcon" Symbol="ArrowForwardDownLightning24" FontSize="30" Margin="8,0,8,0"  VerticalAlignment="Center" DockPanel.Dock="Left"  />
                <Viewbox Height="30" VerticalAlignment="Center" DockPanel.Dock="Top" HorizontalAlignment="Left" >
                    <TextBlock Text="TDP"  />
                </Viewbox>

                <Slider x:Name="control" Minimum="5" Maximum="60" Margin="0,0,15,0" />
            </DockPanel>
        </Border>
    </Grid>
  
</classes:ControllerUserControl>
